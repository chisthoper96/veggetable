<div class="container">
    <h1 class="mb-5">Sugerencia del día</h1>
    <div class="row mt-5">

      <div class="col-6">
        <%= image_tag @sugerencia.image_url, class: 'imagen-show' %>
      </div>

      <div class="col-6">

        <div class="container-receta text-left">
          <h1 class ="p-4 "><%= @sugerencia.name_recipes %></h1>
          <h4>INGREDIENTES</h4>

          <%  @ingredientes = @sugerencia.ingredients  %>
              <ul>
            <% @ingredientes.each do |ingredient|%>
              <div class="d-flex">
                <span><%= image_tag asset_path("gota.png"), class: "reducir"%></span>
                <li class="contenedor-chico d-flex p-2"><%= ingredient.name_ingredient%>
              </div>
            <% end %>
            </ul>

          <h4>MODO DE PREPARACIÓN: </h4>
          <%= @sugerencia.preparation  %>

          <div class="contenedor-chico d-flex p-2 ">
            <% fav_recipe = current_user&.recipefavorites.find_by(recipe_id: @sugerencia.id) %>
            <% if fav_recipe %>
              <%= link_to recipe_recipes_favorite_path(@sugerencia, fav_recipe),method: :delete, class: "btn" do %>
                <span><i class="fas fa-3x fa-heart p-2 mr-3 c"></i></span>
              <% end %>
            <% else %>
              <%= link_to recipe_recipes_favorites_path(@sugerencia), method: :post, class: "btn" do %>
                <span><i class="far fa-3x fa-heart p-2 mr-3 c"></i></span>
              <% end %>
            <% end %>

             <p class="mb-0"><%= link_to  "volver atras", href="javascript:history.back()", class: 'button-orange', id: 'ver-receta' %></p>
          </div>
        </div>
      </div>
    </div>
</div>
<footer>
  <div class= "p-1" style="background: #edeeed;">
 
      <section class="mb-1">
      <!-- Facebook -->
      <a
        class="btn btn-primary btn-floating m-2"
        style="background-color: #000000;"
        href="#!"
        role="button"
        ><i class="fab fa-facebook-f"></i
      ></a>
      <!-- Twitter -->
      <a
        class="btn btn-primary btn-floating m-2"
        style="background-color: #000000;"
        href="#!"
        role="button"
        ><i class="fab fa-twitter"></i
      ></a>
      <!-- Instagram -->
      <a
        class="btn btn-primary btn-floating m-2"
        style="background-color: #000000;"
        href="#!"
        role="button"
        ><i class="fab fa-instagram"></i></a>

    <p class="text-footer">© 2021 VeggeTable
  </p>
</footer>
