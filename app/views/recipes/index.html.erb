<h1 class = "p-4 m-4" >Tenemos para ti ...</h1>

<div class="container">
  <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-lg-6">
          <div class="tarjeta-body d-flex tarjetas mb-3 ml-1 m4">
            <div>
              <%= image_tag recipe.image_url, class: 'imagen_recipes' %>
            </div>
            <div class="">
              <div class="ml-4 text-left">
              <p class="titulo_recetas"><%= link_to "#{recipe.name_recipes.upcase}", recipe_path(recipe) %></p>
            </div>
            <div class="dul">
              <% @ingredientes = recipe.ingredients.first(3) %>
              <ul>
                <% @ingredientes.each do |ingredient|%>
                  <li class="contenedor-chico d-flex"><%= ingredient.name_ingredient%>
                <% end %>
              </ul>
            </div>
            <div class="pos-star-recipe">
              <% recipe.rating.times do |time| %>
                <i class="fas fa-star color-star"></i> 
              <% end %>
            </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
  <div class="row">
    <div class="col-6 offset-3">
      <%= link_to "Nueva búsqueda", search_path, class: "button-orange"  %>
    </div>
  </div>
</div>
  
  <div class= "container p-5 mb-5 sticky-botton">
</div>

  <div class="footer sticky-botton">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag asset_path("pic2.jpeg"), class: 'slide' %>
      </div>
      <div class="carousel-item">
        <%= image_tag asset_path("pic3.jpeg"), class: 'slide' %>
      </div>
      <div class="carousel-item">
        <%= image_tag asset_path("pic4.jpeg"), class: 'slide' %>
      </div>
      <div class="carousel-item">
        <%= image_tag asset_path("pic5.jpeg"), class: 'slide' %>
      </div>
      <div class="carousel-item">
        <%= image_tag asset_path("pic6.jpeg"), class: 'slide' %>
      </div>
    </div>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    </div>
  </div>
<footer>
