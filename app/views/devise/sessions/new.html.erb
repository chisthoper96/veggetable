<div class="box-sessions">
  <div class="container">
    <h2 class="text-center">Iniciar Sesión</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-sessions", align="center">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email", placeholder: "Correo Electrónico" } %>
    <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", placeholder: "Contraseña" } %>
  </div>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  <div class="form-actions">
    <div>
      <%= f.button :submit, "Ingresar", class:"button-green-filled" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>
</div>
